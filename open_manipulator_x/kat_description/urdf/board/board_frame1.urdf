<?xml version="1.0" ?>
<robot name="board">
  <link name="board_frame1">
    <inertial>
      <!-- COM: STL bounding box 중심 (단위 m) -->
      <origin xyz="0.0075 0 0.025" rpy="0 0 0"/>
      <!-- 3D 프린터 + 25% infill 가정, 약 0.56 kg -->
      <mass value="0.56"/>
      <!-- 직육면체 근사 관성 모멘트 (kg·m^2), COM 기준 -->
      <inertia
        ixx="0.00198"
        iyy="0.00171"
        izz="0.00346"
        ixy="0.0"
        iyz="0.0"
        ixz="0.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://kat_description/meshes/board/board_frame1.stl"/>
      </geometry>
      <material name="silver">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://kat_description/meshes/board/board_frame1.stl"/>
      </geometry>
    </collision>
  </link>

  <gazebo>
    <plugin name="control" filename="libgazebo_ros_control.so"/>
  </gazebo>
</robot>

